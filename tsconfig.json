{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["ES2021", "dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "incremental": true,
    "outDir": "./",
    "rootDir": "./src",
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
